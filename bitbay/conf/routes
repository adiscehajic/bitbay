# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page


GET           /                                  @controllers.ApplicationController.index()
GET           /signup                            @controllers.ApplicationController.signUp()
POST          /signup                            @controllers.ApplicationController.newUser()
GET           /signin                            @controllers.ApplicationController.signIn()
POST          /signin                            @controllers.ApplicationController.validateSignIn()
GET           /logout                            @controllers.ApplicationController.logout()
GET           /contactus                         @controllers.ApplicationController.contactUs()
POST          /contactus                         @controllers.EmailController.sendEmail()

POST          /signin/validateFormLog            @controllers.ApplicationController.validateFormLogin()
POST          /signup/validateFormReg            @controllers.ApplicationController.validateFormRegistration()
POST          /product/comment/validate          @controllers.CommentController.validateFormComment()

POST          /product/                          @controllers.ProductController.productRating()

POST          /product/new/validateForm          @controllers.ProductController.validateFormProduct()
GET           /product/new                       @controllers.ProductController.newProduct()
POST          /product/thumbUp                   @controllers.CommentController.saveThumbUp()
GET           /product/search                    @controllers.ProductController.searchProduct()
POST          /product/search                    @controllers.ProductController.autocompleteSearch()
GET           /product/category                  @controllers.ProductController.viewProductsByCategory(id: Integer)
GET           /product/:id                       @controllers.ProductController.getProduct(id: Integer)
POST          /product/:id                       @controllers.CartController.addToCart(id: Integer)
POST          /product/comment/:id               @controllers.CommentController.saveComment(id: Integer)
GET           /product/delete/:id                @controllers.ProductController.deleteProduct(id: Integer)
POST          /product/new/                      @controllers.ProductController.saveProduct()
GET           /product/edit/:id                  @controllers.ProductController.editProduct(id: Integer)
POST          /product/edit/:id                  @controllers.ProductController.updateProduct(id: Integer)

GET           /admin                             @controllers.AdminController.adminLogin()
GET           /admin/logout                      @controllers.AdminController.adminLogout()
GET           /admin/index                       @controllers.AdminController.adminIndex()
POST          /admin/index                       @controllers.AdminController.validateLogin()
GET           /admin/users                       @controllers.AdminController.adminUsers()
GET           /admin/categories                  @controllers.AdminController.adminCategories()
GET           /admin/products                    @controllers.AdminController.adminProducts()
GET           /admin/products/:id                @controllers.ProductController.deleteProductAdmin(id: Integer)

POST          /admin/validateForm                @controllers.AdminController.validateFormAdmin()
GET           /admin/messages/new                @controllers.AdminController.adminNewMessage(email: String)
GET           /admin/messages/inbox              @controllers.AdminController.adminReceivedMessages()
GET           /admin/messages/sent               @controllers.AdminController.adminSentMessages()
GET           /admin/message                     @controllers.AdminController.adminViewMessage(id: Integer)

GET           /user                              @controllers.Users.getUser()
POST          /user/validate                     @controllers.Users.validateFormUser()
GET           /user/cart                         @controllers.CartController.getCart()
POST          /user/cart                         @controllers.CartController.updateItemQuantity(id: Integer)
DELETE        /user/cart/delete:id               @controllers.CartController.removeFromCart(id: Integer)
GET           /user/products                     @controllers.Users.getAllUserProducts()
DELETE        /user/delete                       @controllers.Users.deleteUserAccount()
GET           /user/delete/:id                   @controllers.Users.deleteUser(id: Integer)
GET           /user/edit                         @controllers.Users.editUser()
POST          /user/edit                         @controllers.Users.updateUser()

GET           /user/messages                     @controllers.MessageController.getReceivedMessages()
GET           /user/messages/sent                @controllers.MessageController.getSentMessages()
GET           /user/messages/reply               @controllers.MessageController.replyMessage(id: Integer)
GET           /user/messages/new                 @controllers.MessageController.newMessage(email: String)
POST          /user/messages/send                @controllers.MessageController.sendMessage()
POST          /user/messages/reply               @controllers.MessageController.respondMessage()
POST          /user/messages/delete              @controllers.MessageController.deleteMessage(id: Integer)
POST          /user/messages/validateForm        @controllers.MessageController.validateFormMessage()

GET           /category/new                      @controllers.CategoryController.newCategory()
GET           /category/edit/:id                 @controllers.CategoryController.editCategory(id:Integer)
GET           /category/delete/:id               @controllers.CategoryController.deleteCategory(id:Integer)
POST          /category/new                      @controllers.CategoryController.saveCategory()
POST          /category/edit/:id                 @controllers.CategoryController.updateCategory(id:Integer)
POST          /category/validateForm             @controllers.CategoryController.validateFormCategory()

GET           /validate/:token                   @controllers.Users.emailValidation(token: String)


# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                      controllers.Assets.versioned(path="/public", file: Asset)
